<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondoemployme"
    tools:context=".SignUpActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/cuadro_editext">

            <TextView
                android:id="@+id/loginText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrarse"
                android:textAlignment="center"
                android:textColor="@color/azul"
                android:textSize="36sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/name_email"
                android:background="@drawable/cuadro_editext"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Nombre"
                android:drawableLeft="@drawable/ico_perfil"
                android:textColor="@color/black"
                android:drawablePadding="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/first_name"
                android:background="@drawable/cuadro_editext"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Apellido Materno"
                android:drawableLeft="@drawable/ico_perfil"
                android:textColor="@color/black"
                android:drawablePadding="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/last_name"
                android:background="@drawable/cuadro_editext"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Apellido Paterno"
                android:drawableLeft="@drawable/ico_perfil"
                android:textColor="@color/black"
                android:drawablePadding="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/login_password"
                android:background="@drawable/cuadro_editext"
                android:layout_marginTop="20dp"
                android:inputType="textPassword"
                android:padding="8dp"
                android:hint="ContraseÃ±a"
                android:drawableLeft="@drawable/ico_lock"
                android:textColor="@color/black"
                android:drawablePadding="8dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Registrarse"
                android:id="@+id/login_button"
                android:textSize="15sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/azul"
                app:cornerRadius = "20dp"/>

            <TextView
                android:id="@+id/login_RedirectText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/azul"
                android:textSize="18sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>